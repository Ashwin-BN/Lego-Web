<!DOCTYPE html>
<html lang="en">   

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Lego Collection</title>
</head>

    <body class="bg-gray-50">

        <%- include('partials/navbar', { page: '/editSet' }) %>

    <div class="container mx-auto p-4">
        <div class="hero bg-gray-100 rounded-lg p-6 text-black">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>
                    <p class="py-6">Edit the details of the Lego Set <%= set.name %> below</p>
                </div>
            </div>
        </div>

        <br />

        <form action="/lego/editSet/<%= set.set_num %>" method="post">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
                <div>
                    <div class="mb-6 bg-white">
                        <label for="name" class="block text-black font-medium">Name</label>
                        <input type="text" id="name" name="name" value="<%= set.name %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black bg-white">
                    </div>
                    <div class="mb-6 bg-white">
                        <label for="year" class="block text-black font-medium">Year</label>
                        <input type="number" id="year" name="year" value="<%= set.year %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black bg-white">
                    </div>
                </div>
                <div>
                    <div class="mb-6">
                        <label for="num_parts" class="block text-black font-medium">Number of Parts</label>
                        <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black bg-white">
                    </div>
                    <div class="mb-6">
                        <label for="img_url" class="block text-black font-medium">Image URL</label>
                        <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black bg-white">
                    </div>
                </div>
                <div>
                    <div class="mb-6 bg-white">
                        <label for="theme_id" class="block text-black font-medium">Theme</label>
                        <select id="theme_id" name="theme_id" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black bg-white">
                            <% themes.forEach(theme => { %>
                                <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-6 bg-white">
                        <label for="set_num" class="block text-black font-medium">Set Num</label>
                        <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 text-black cursor-not-allowed bg-white">
                    </div>
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="btn btn-success btn-sm">Update Set</button>
                <a class="btn btn-error btn-sm" href="/lego/deleteSet/<%= set.set_num %>">Delete Set</a>
            </div>
        </form>
    </div>
</body>
</html>